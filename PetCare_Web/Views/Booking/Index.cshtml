@{
    ViewData["Title"] = "Đặt Lịch Khám";
}

<div class="container" style="margin-top: 50px;">
    <div class="card border-primary">
        <div class="card-header bg-primary text-white">
            <h3>🏥 ĐẶT LỊCH KHÁM BỆNH (DEMO)</h3>
        </div>
        <div class="card-body">
            <form action="/Booking/Create" method="post">

                <div class="mb-3">
                    <label><b>Chọn Ngày & Giờ muốn khám:</b></label>
                    <input type="datetime-local" name="NgayHen" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label><b>Chọn Bác sĩ:</b></label>
                    @Html.DropDownList("MaBs", (SelectList)ViewBag.ListBacSi, "-- Chọn Bác sĩ --", new { @class = "form-control" })
                </div>

                <div class="mb-3">
                    <label><b>Ghi chú / Triệu chứng:</b></label>
                    <textarea name="GhiChu" class="form-control" rows="3">Chó nhà em bỏ ăn 2 ngày nay...</textarea>
                </div>

                <button type="submit" class="btn btn-success btn-lg w-100">✅ XÁC NHẬN ĐẶT LỊCH</button>
            </form>
        </div>
    </div>
</div>